rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Resumes folder - students can upload their own resumes
    match /resumes/{userId}/{fileName} {
      // Anyone authenticated can read resumes
      allow read: if request.auth != null;
      
      // Only the user can upload/update their own resume
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024  // Max 10MB
        && request.resource.contentType == 'application/pdf';  // Only PDF files
      
      // Only the user can delete their own resume
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile pictures folder (optional for future use)
    match /profile-pictures/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');  // Only images
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
